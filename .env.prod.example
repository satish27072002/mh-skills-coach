# Runtime mode
DEV_MODE=false

# Public URLs (Azure VM domain)
APP_DOMAIN=mh-skills-coach.francecentral.cloudapp.azure.com
APP_BASE_URL=https://mh-skills-coach.francecentral.cloudapp.azure.com
FRONTEND_URL=https://mh-skills-coach.francecentral.cloudapp.azure.com
NEXT_PUBLIC_API_BASE_URL=/api

# Frontend server-side -> backend (internal docker network)
API_BASE_URL=http://backend:8000

# Backend internal services
MCP_BASE_URL=http://mcp:7000

# Cookies
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# Database (containerized postgres)
POSTGRES_DB=mh
POSTGRES_USER=mh
POSTGRES_PASSWORD=__CHANGE_ME__
DATABASE_URL=postgresql+psycopg://mh:__CHANGE_ME__@postgres:5432/mh

# Google OAuth
GOOGLE_CLIENT_ID=__PASTE_GOOGLE_CLIENT_ID__
GOOGLE_CLIENT_SECRET=__PASTE_GOOGLE_CLIENT_SECRET__
GOOGLE_REDIRECT_URI=https://mh-skills-coach.francecentral.cloudapp.azure.com/auth/google/callback

# Stripe (test/live based on your deployment)
STRIPE_SECRET_KEY=__PASTE_STRIPE_SECRET_KEY__
STRIPE_PRICE_ID=__PASTE_STRIPE_PRICE_ID__
STRIPE_WEBHOOK_SECRET=__PASTE_STRIPE_WEBHOOK_SECRET__
# Webhook endpoint URL in Stripe Dashboard:
# https://mh-skills-coach.francecentral.cloudapp.azure.com/api/payments/webhook

# LLM + embeddings
LLM_PROVIDER=openai
EMBED_PROVIDER=openai
OPENAI_API_KEY=__PASTE_OPENAI_API_KEY__
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536

# SMTP for MCP send_email tool
SMTP_HOST=__PASTE_SMTP_HOST__
SMTP_PORT=587
SMTP_USERNAME=__PASTE_SMTP_USERNAME__
SMTP_PASSWORD=__PASTE_SMTP_PASSWORD__
SMTP_FROM=MH Skills Coach <noreply@example.com>
SMTP_USE_TLS=true
