# App URLs
# Local dev:
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
# Frontend server-side calls backend through Docker network:
API_BASE_URL=http://backend:8000
# Production domain used by Caddy:
APP_DOMAIN=example.com

# Google OAuth (OIDC Authorization Code + PKCE)
GOOGLE_CLIENT_ID=__PASTE_GOOGLE_CLIENT_ID__
GOOGLE_CLIENT_SECRET=__PASTE_GOOGLE_CLIENT_SECRET__
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
# For production HTTPS: https://example.com/auth/google/callback

# Stripe (test mode)
STRIPE_SECRET_KEY=__PASTE_SK_TEST__
STRIPE_PRICE_ID=__PASTE_PRICE_ID__
STRIPE_WEBHOOK_SECRET=__PASTE_WHS__

# Cookies
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Backend core settings
DEV_MODE=false
POSTGRES_DB=mh
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/mh
MCP_BASE_URL=http://mcp:7000
LLM_PROVIDER=ollama
EMBED_PROVIDER=ollama
# For local dev without secrets:
# DEV_MODE=true
# LLM_PROVIDER=mock
# EMBED_PROVIDER=mock
# EMBEDDING_DIM=1536

OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small
# Optional override. If omitted and EMBED_PROVIDER=openai, dimension is auto-detected at startup.
# EMBEDDING_DIM=1536
THERAPIST_SEARCH_ENABLED=true

# MCP email tool (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_TLS=true
