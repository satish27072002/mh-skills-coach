# App URLs
# Local dev:
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
# Frontend server-side calls backend through Docker network:
API_BASE_URL=http://backend:8000
# Oracle VM domain (used by Caddyfile.oracle):
APP_DOMAIN=example.com

# Google OAuth (OIDC Authorization Code + PKCE)
GOOGLE_CLIENT_ID=__PASTE_GOOGLE_CLIENT_ID__
GOOGLE_CLIENT_SECRET=__PASTE_GOOGLE_CLIENT_SECRET__
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
# For Oracle VM HTTPS: https://example.com/auth/google/callback

# Stripe (test mode)
STRIPE_SECRET_KEY=__PASTE_SK_TEST__
STRIPE_PRICE_ID=__PASTE_PRICE_ID__
STRIPE_WEBHOOK_SECRET=__PASTE_WHS__

# Cookies
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Backend core settings
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/mh
MCP_BASE_URL=http://mcp:7000
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=gemma2:2b
OLLAMA_EMBED_MODEL=nomic-embed-text
EMBEDDING_DIM=768
THERAPIST_SEARCH_ENABLED=true
